{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "https://converge.local/schemas/budget.schema.json",
  "title": "Budget",
  "$comment": "Draft 2020-12 variant. Informational wrapper; annotations only. Validators may treat unknown keywords as annotations. Use unevaluatedProperties to emulate closed schemas.",
  "description": "Category-based budget allocation for a specific period. Matches Converge API /api/budgets/ (informational 2020-12).",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "budget_type": { "type": "string", "enum": ["monthly", "quarterly", "annual"] },
    "year": { "type": "integer" },
    "month": { "type": "integer" },
    "quarter": { "type": "integer" },
    "categories": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "created_by": { "type": "integer" },
    "created_by_name": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "examples": [
    {
      "name": "Q1 Budget",
      "budget_type": "quarterly",
      "year": 2026,
      "quarter": 1,
      "categories": { "professional_services": 8000, "equipment": 2500 }
    }
  ]
}
