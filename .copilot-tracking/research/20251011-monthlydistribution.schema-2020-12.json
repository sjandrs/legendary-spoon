{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "https://converge.local/schemas/monthlydistribution.schema.json",
  "title": "MonthlyDistribution",
  "$comment": "Draft 2020-12 informational variant. Annotations only.",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "distribution_id": { "type": "string" },
    "fiscal_year": { "type": ["string", "integer"] },
    "percentages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "month": { "type": "string" },
          "percentage_allocation": { "type": "number" }
        }
      }
    }
  }
}
