{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://converge.local/schemas/technician.schema.json",
  "title": "Technician",
  "description": "Technician profile for field service workers.",
  "type": "object",
  "$comment": "Aligned to main.models.Technician; nested relations are exposed via separate endpoints.",
  "properties": {
    "id": { "type": "integer", "readOnly": true },
    "user": { "type": ["integer", "null"] },
    "employee_id": { "type": "string" },
    "first_name": { "type": "string" },
    "last_name": { "type": "string" },
    "phone": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "hire_date": { "type": ["string", "null"], "format": "date" },
    "is_active": { "type": "boolean" },
    "base_hourly_rate": { "type": ["number", "null"], "minimum": 0 },
    "emergency_contact": { "type": "object" },
    "created_at": { "type": "string", "format": "date-time", "readOnly": true },
    "updated_at": { "type": "string", "format": "date-time", "readOnly": true }
  },
  "required": ["employee_id", "first_name", "last_name", "phone", "email"],
  "additionalProperties": false,
  "examples": [
    {
      "employee_id": "T-1001",
      "first_name": "Alex",
      "last_name": "Nguyen",
      "phone": "+1-555-0101",
      "email": "alex.nguyen@example.com",
      "is_active": true
    }
  ]
}
